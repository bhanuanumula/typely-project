<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Manage Blogs | Typely Admin</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
/* ---------------- Body ---------------- */
body {
    background: linear-gradient(to right, #e0eafc, #cfdef3);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    min-height: 100vh;
    padding-bottom: 50px;
    margin: 0;
}

/* ---------------- Header ---------------- */
.admin-header {
    background: linear-gradient(90deg, #1e3c72, #2a5298);
    color: white;
    padding: 18px 30px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    border-radius: 0 0 12px 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.admin-header h2 {
    font-weight: 700;
    margin: 0;
    font-size: 1.8rem;
}
.logout-btn, .back-btn {
    background-color: #fff;
    color: #1e3c72;
    font-weight: 600;
    border-radius: 6px;
    padding: 6px 16px;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-left: 10px;
}
.logout-btn:hover, .back-btn:hover {
    background-color: #f8f9fa;
    transform: scale(1.05);
}

/* ---------------- Card & Table ---------------- */
.card { 
    border: none;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    margin-top: 30px;
    overflow-x: auto;
}

/* Table Styling */
table th { 
    background-color: #1e3c72;
    color: white;
    text-align: center;
}
table td { 
    vertical-align: middle;
    text-align: center;
}
table td.text-start { text-align: left; padding-left: 15px; }
table tr:hover { 
    background-color: rgba(30, 60, 114, 0.05);
}

/* Badges */
.badge-pending { 
    background-color: #ffc107; 
    color: #000; 
    font-weight: 500; 
}
.badge-approved { 
    background-color: #198754; 
    color: #fff; 
    font-weight: 500; 
}

/* Buttons */
.btn { 
    border-radius: 6px; 
    font-weight: 500; 
    padding: 4px 12px; 
    transition: all 0.2s ease; 
}
.btn-danger { 
    background-color: #dc3545; 
    border: none; 
}
.btn-danger:hover { 
    background-color: #b52a37; 
    transform: scale(1.05); 
}
.btn-warning { 
    background-color: #ffc107; 
    border: none; 
    color: #000; 
}
.btn-warning:hover { 
    background-color: #e0a800; 
    transform: scale(1.05); 
}
.btn-success { 
    background-color: #198754; 
    border: none; 
}
.btn-success:hover { 
    background-color: #157347; 
    transform: scale(1.05); 
}

/* Responsive tweaks */
@media (max-width: 768px) {
    .admin-header { 
        flex-direction: column; 
        gap: 10px; 
        text-align: center; 
    }
    table td, table th { font-size: 0.9rem; }
}
</style>
</head>
<body>

<div class="admin-header d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center">
    <a href="/admin" class="back-btn">‚Üê Back</a>
    <h2 class="ms-2">Manage Blogs</h2>
  </div>
  <a href="/admin/logout" class="logout-btn">Logout</a>
</div>

<div class="container">
  <div class="card p-4">
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Author</th>
          <th>Date</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% blogs.forEach(blog => { %>
        <tr>
          <td><%= blog.id %></td>
          <td class="text-start"><%= blog.title %></td>
          <td><%= blog.username %></td>
          <td><%= new Date(blog.created_at).toLocaleDateString('en-US') %></td>
          <td>
            <% if(blog.status === 'approved') { %>
              <span class="badge badge-approved">Approved</span>
            <% } else { %>
              <span class="badge badge-pending">Pending</span>
            <% } %>
          </td>
          <td class="d-flex justify-content-center gap-1">
            <form action="/admin/blogs/delete/<%= blog.id %>" method="POST">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
            <form action="/admin/blogs/edit/<%= blog.id %>" method="GET">
              <button type="submit" class="btn btn-warning btn-sm">Edit</button>
            </form>
            <% if(blog.status !== 'approved') { %>
            <form action="/admin/blogs/approve/<%= blog.id %>" method="POST">
              <button type="submit" class="btn btn-success btn-sm">Approve</button>
            </form>
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

</body>
</html>
