<div class="dashboard-container my-5">
  <!-- Header -->
  <div class="dashboard-header d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold" style="color: #1e3c72;">My Blogs</h2>
    <a href="/create" class="btn btn-primary fw-bold" style="background: linear-gradient(90deg, #1e3c72, #3a66a8); border: none;">Create New Blog</a>
  </div>

  <% if(userBlogs.length > 0){ %>
    <div class="row g-4">
      <% userBlogs.forEach(blog => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm rounded-4 blog-card">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold text-primary"><%= blog.title %></h5>
              <p class="text-muted mb-3" style="font-size:0.85rem;">
                <%= new Date(blog.created_at).toLocaleDateString() %>
              </p>
              <div class="mt-auto d-flex flex-wrap gap-2">
                <a href="/view/<%= blog.id %>" class="btn btn-primary btn-sm" style="background: linear-gradient(90deg, #1e3c72, #3a66a8); border: none;">View</a>
                <a href="/edit/<%= blog.id %>" class="btn btn-warning btn-sm" style="background: linear-gradient(90deg, #f59d00, #ffb347); border: none;">Edit</a>
                <form action="/delete/<%= blog.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="fs-5 text-center mt-5 text-secondary">
      You have not created any blogs yet. Click "Create New Blog" to start.
    </p>
  <% } %>
</div>

<style>
.dashboard-container {
  max-width: 1000px;
  margin: auto;
  padding: 30px 15px;
}

.blog-card {
  transition: transform 0.3s, box-shadow 0.3s;
}

.blog-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(30, 60, 114, 0.15);
}

.btn-primary:hover, .btn-warning:hover {
  opacity: 0.9;
}
</style>
